@startuml
title GetStarCommand Sequence Diagram

actor User
participant ":Parser" as parser
participant ":GetStarCommand" as getStarCommand
participant ":FlashcardList" as flashcardList
participant ":Ui" as ui
participant ":Storage" as storage

User -> parser : enter "getstar"
parser -> getStarCommand : create GetStarCommand()
activate getStarCommand

getStarCommand -> flashcardList : getStarredFlashcardsString()
activate flashcardList
flashcardList --> getStarCommand : String starredFlashcardsList
deactivate flashcardList

alt starredFlashcardsList is empty
    getStarCommand -> ui : respond("No starred flashcards found.")
    activate ui
    ui --> getStarCommand : void
    deactivate ui
else starredFlashcardsList has entries
    getStarCommand -> ui : respond(showStarredFlashcardsList)
    activate ui
    ui --> getStarCommand : void
    deactivate ui
end

getStarCommand -> storage : (no file changes)
note right: Read-only command, no persistence needed.

' --- Object cleanup phase ---
destroy getStarCommand

@enduml
