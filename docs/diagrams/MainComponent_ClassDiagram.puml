@startuml MainComponent_ClassDiagram

title Main Component Class Diagram

skinparam classAttributeIconSize 0
skinparam classBackgroundColor #FFF3E6
skinparam packageStyle rectangle

package "quizmos" {
    class QuizMos {
        - APP_LOGGER_NAME : String
        - logger : Logger
        - flashcards : FlashcardList
        - storage : Storage
        --
        + QuizMos()
        - setupLogging() : void
        + run() : void
        + main(args : String[]) : void
    }
}

package "quizmos.parser" {
    class Parser {
        + parseCommand(command : String) : Command
    }
}

package "quizmos.storage" {
    class Storage {
        + load() : ArrayList<Flashcard>
        + writeToFile(list : FlashcardList) : void
    }
}

package "quizmos.ui" {
    class Ui {
        + respond(msg : String) : void
        + readCommand() : String
        + respondError(msg : String) : void
        + invalidCommandRespond() : void
    }
}

package "quizmos.command" {
    abstract class Command {
        + execute(flashcards : FlashcardList, storage : Storage) : void
        + getIsExit() : boolean
    }
}

QuizMos --> Parser : parses command
QuizMos --> Command : executes
QuizMos --> Ui : interacts with
QuizMos --> Storage : persists data
QuizMos --> FlashcardList : manages flashcards

@enduml
